<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:background="@color/inc_exp_selected"
        android:orientation="vertical" >

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/radioToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Today" />

            <RadioButton
                android:id="@+id/radioThisWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This week (Sunday to Saturday)" />

            <RadioButton
                android:id="@+id/radioThisMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This month" />
            
            <RadioButton
                android:id="@+id/radioThisYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This year" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_add_entity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="  OK  "
             />

        <Button
            android:id="@+id/btn_add_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            />
    </LinearLayout>

</LinearLayout>